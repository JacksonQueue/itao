<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE generatorConfiguration PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN" "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd" >
<generatorConfiguration>
	<properties resource="generatorConfig.properties" />
	<context id="context1" targetRuntime="MyBatis3Simple"
		defaultModelType="flat">

		<property name="javaFileEncoding" value="UTF-8" />

		<plugin type="org.mybatis.generator.plugins.LeafToStringPlugin" />
		<plugin type="org.mybatis.generator.plugins.LeafSerializablePlugin" />

		<!-- 生成指定模板的Service -->
		<plugin type="org.mybatis.generator.plugins.GeneratorServicePlugin">
			<property name="targetProject"
				value="mavenprojectpath:/Leaf-service/src/main/java" />
			<property name="targetPackage" value="com.leaf.network.service.${model}" />
			<property name="rootInterface"
				value="com.leaf.network.service.common.IBasicService" />
			<property name="rootClass"
				value="com.leaf.network.service.common.AbsBasicService" />
		</plugin>

		<!-- 生成指定模板的Controller -->
		<plugin type="org.mybatis.generator.plugins.GeneratorControllerPlugin">
			<property name="targetProject" value="mavenprojectpath:/Leaf-web-admin/src/main/java" />
			<property name="targetPackage" value="com.leaf.network.web.${model}.controller" />
			<property name="serviceTargetPackage" value="com.leaf.network.service.system" />
			<property name="rootClass" value="com.leaf.network.basic.AbsBasicController" />
		</plugin>

		<!-- 生成指定模板的XML -->
		<plugin type="org.mybatis.generator.plugins.GeneratorXmlPlugin" />
		<!-- 生成指定模板的Mapper -->
		<plugin type="org.mybatis.generator.plugins.GeneratorMapperPlugin" />

		<commentGenerator
			type="org.mybatis.generator.plugins.FosunCommentGenerator">
			<property name="suppressAllComments" value="true" />
			<property name="suppressDate" value="true" />
			<property name="author" value="${author}" />
		</commentGenerator>

		<jdbcConnection driverClass="${jdbc.driverClassName}"
			connectionURL="${jdbc.url}" userId="${jdbc.username}" password="${jdbc.password}" />

		<javaTypeResolver>
			<property name="forceBigDecimals" value="false" />
		</javaTypeResolver>

		<javaModelGenerator targetPackage="com.cloudjet.jph.model.${model}"
			targetProject="projectpath:src/main/java">
			<property name="enableSubPackages" value="false" />
			<property name="trimStrings" value="false" />
			<property name="rootClass" value="com.cloudjet.jph.model.basic.BasicEntity" />
		</javaModelGenerator>

		<sqlMapGenerator targetPackage="com.cloudjet.jph.mapper.${model}"
			targetProject="projectpath:src/main/java">
			<property name="enableSubPackages" value="false" />
		</sqlMapGenerator>

		<javaClientGenerator targetPackage="com.cloudjet.jph.mapper.${model}"
			type="XMLMAPPER" targetProject="projectpath:src/main/java">
			<property name="enableSubPackages" value="false" />
		</javaClientGenerator>


		<table tableName="point_operation_log" domainObjectName="PointOperationLog">
			<generatedKey column="log_id" sqlStatement="select uuid_short()" />
		</table>

	</context>
</generatorConfiguration>
